<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="313dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="25dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_centre"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/button_plat_design"
            android:src="@drawable/bgfood"
            android:scaleType="fitXY">
        </com.google.android.material.imageview.ShapeableImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/texte_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centre Piace"
                android:textSize="22dp"
                android:textColor="#657599"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/map" />

                <TextView
                    android:id="@+id/map_texte"
                    android:paddingTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="Maroc-Tiznit haymassira rue 18"
                    android:textSize="12dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/wifi"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/wifi"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/datashow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/datashow"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"/>
                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/add"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/info_flaiche"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/flaiche"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>