<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/white_wifi" />
        <TextView
            android:id="@+id/txt_wifi"
            android:layout_width="60dp"
            android:text="Wifi"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_datashow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/white_datashow" />
        <TextView
            android:id="@+id/txt_datashow"
            android:layout_width="70dp"
            android:textColor="@color/white"

            android:text="datachow"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_class"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/white_class" />
        <TextView
            android:id="@+id/txt_class"
            android:layout_width="95dp"
            android:text="Classroom : 5"
            android:textColor="@color/white"

            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_chair"
            android:layout_width="50dp"

            android:layout_height="50dp"
            app:srcCompat="@drawable/white_char" />
        <TextView
            android:id="@+id/txt_chair"
            android:layout_width="50dp"
            android:text="100+"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>